<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="460dp"
    android:background="@drawable/shape"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pop_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@mipmap/btn_close2x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="忘记密码"
        android:textColor="@color/color_text_dark"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="用 户 名："
        android:textColor="@color/color_text_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/pop_phone"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="注册所用手机号"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="新 密 码 ："
        android:textColor="@color/color_text_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/pop_password"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="请输入密码" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="验 证 码 ："
        android:textColor="@color/color_text_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/pop_code"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:inputType="number"
        android:hint="请输入验证码" />

    <Button
        android:id="@+id/pop_btn"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_shape"
        android:text="获取验证码"
        android:textColor="@color/color_light_white"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>