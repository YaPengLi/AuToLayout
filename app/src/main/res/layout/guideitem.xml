<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@mipmap/tourists_tuijian_list_bg_normal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/iv_recommend_guide_item_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_recommend_guide_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_recommend_guide_item_img"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_recommend_guide_item_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recommend_guide_item_title"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/iv_recommend_guide_item_img"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/iv_recommend_guide_item_star_one"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/star_selector"/>

                <ImageView
                    android:id="@+id/iv_recommend_guide_item_star_two"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/star_selector"/>

                <ImageView
                    android:id="@+id/iv_recommend_guide_item_star_three"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/star_selector"/>

                <ImageView
                    android:id="@+id/iv_recommend_guide_item_star_four"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/star_selector"/>

                <ImageView
                    android:id="@+id/iv_recommend_guide_item_star_five"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/star_selector"/>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>