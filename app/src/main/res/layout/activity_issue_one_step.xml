<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dark_white"
    android:orientation="vertical">

    <include layout="@layout/title_all"/>

    <com.silent.fiveghost.tourist.view.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_light_white"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/temp"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@mipmap/temp"/>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@mipmap/temp"/>

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@mipmap/temp"/>

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@mipmap/temp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:id="@+id/rl_issue_go"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/ll_issue_tab"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@color/color_dark_white">

                        <TextView
                            android:id="@+id/tv_issue_text_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="开始时间"
                            android:textColor="@color/color_button_bg"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:id="@+id/img_issue_icon_go"
                            android:layout_width="12dp"
                            android:layout_height="6dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:background="@mipmap/icon_down_arrow"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_issue_end"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/ll_issue_tab"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@color/color_dark_white">

                        <TextView
                            android:id="@+id/tv_issue_text_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="结束时间"
                            android:textColor="@color/color_text_default"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:id="@+id/img_issue_icon_end_time"
                            android:layout_width="12dp"
                            android:layout_height="6dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:background="@mipmap/icon_down_arrow"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_light_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="人数"
                        android:textColor="@color/color_text_dark"
                        android:textSize="16sp"/>

                    <RelativeLayout
                        android:id="@+id/img_issue_one_step_man_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_add_select"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_issue_one_step_man_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_issue_one_step_man_add"
                        android:text="1"/>


                    <RelativeLayout
                        android:id="@+id/img_issue_one_step_man_subtract"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/tv_issue_one_step_man_count_text"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_subtract_select"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/color_dark_white"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="天数"
                        android:textColor="@color/color_text_dark"
                        android:textSize="16sp"/>

                    <RelativeLayout
                        android:id="@+id/img_issue_one_step_day_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_add_select"
                            />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_issue_one_step_day_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_issue_one_step_day_add"
                        android:text="1"/>

                    <RelativeLayout
                        android:id="@+id/img_issue_one_step_day_subtract"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/tv_issue_one_step_day_count_text"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_subtract_select"
                            />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_light_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="偏好"
                    android:textColor="@color/color_text_dark"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/et_info_preference"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_dark_white"
                    android:hint="如：名胜古迹 风景 摄影"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="备注"
                    android:textColor="@color/color_text_dark"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_dark_white"
                    android:hint="请填写您的备注"
                    android:lines="2"/>
            </LinearLayout>

            <ListView
                android:id="@+id/rv_issue_one_step_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_light_white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/color_light_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="出行人信息"
                        android:textColor="@color/color_text_dark"
                        android:textSize="14sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="儿童"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="成人"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="姓名"/>

                            <EditText
                                android:id="@+id/et_info_name"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/color_dark_white"
                                android:hint="请输入姓名"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="生日"/>

                            <RelativeLayout
                                android:id="@+id/rl_info_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/ll_issue_tab"
                                android:layout_weight="1"
                                android:background="@color/color_dark_white">

                                <TextView
                                    android:id="@+id/tv_info_birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:text="请选择"
                                    android:textColor="@color/color_text_default"
                                    android:textSize="16sp"
                                    />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="6dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:background="@mipmap/icon_down_arrow"/>

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="身份证号"
                        android:textColor="@color/color_text_default"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/et_info_id_num"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/color_dark_white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="联系电话"
                        android:textColor="@color/color_text_default"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/et_info_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/color_dark_white"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="备注"
                        android:textColor="@color/color_text_default"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/et_info_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_issue_one_step_add_people"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/icon_add"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="添加出行人信息"
                android:textColor="@color/color_text_dark"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_light_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="联系人信息"
                    android:textColor="@color/color_text_dark"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="出行人姓名"
                    android:textColor="@color/color_text_default"
                    android:textSize="12sp"
                    />

                <EditText
                    android:id="@+id/et_issue_one_step_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_dark_white"
                    android:hint="请输入姓名"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/color_dark_white"
                    android:text="联系电话（用户接受订单信息）"
                    android:textColor="@color/color_text_default"
                    android:textSize="12sp"
                    />

                <EditText
                    android:id="@+id/et_issue_one_step_contacts_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_dark_white"
                    android:hint="请输入手机号"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_issue_one_step_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_button_bg"
                android:text="确认发布"
                android:textColor="@color/color_light_white"
                android:textSize="16sp"
                />
        </LinearLayout>
    </com.silent.fiveghost.tourist.view.MyNestedScrollView>
</LinearLayout>