<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.silent.fiveghost.tourist.ui.activity.ReleaseItineraryActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="175px"
        android:background="#22272f"
        android:gravity="center">

        <ImageView
            android:id="@+id/releaseitinerary_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:src="@mipmap/icon_back_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发布行程"
            android:textColor="#fff"
            android:textSize="40px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/releaseitinerary_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:src="@mipmap/comments" />
    </com.zhy.autolayout.AutoLinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="#191f28"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:textColor="@color/selector1"
            android:id="@+id/releaseitinerary_radio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"

            android:gravity="center"
            android:text="一站式发布"
             />

        <View
            android:layout_width="1px"
            android:layout_height="82px"
            android:background="#3f454a" />

        <RadioButton
            android:id="@+id/releaseitinerary_radio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="分站式发布"
            android:textColor="@color/selector1" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/releaseitinerary_fragment"
        android:layout_width="match_parent"

        android:layout_height="match_parent" />


</com.zhy.autolayout.AutoLinearLayout>
