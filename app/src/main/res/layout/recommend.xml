<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="40px">

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="595px"
            android:layout_height="50px"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_one"
            android:iconifiedByDefault="true"
            android:imeOptions="actionSearch" />

        <ImageView
            android:id="@+id/iv_message_recommend"
            android:layout_width="33px"
            android:layout_height="26px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="31px"
            android:background="@mipmap/top_icon_message" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_suggest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>